<form action="/" method="POST" class="d-flex flex-column align-items-center">
  <input class="mt-4 mb-3 w-50" type="text" class="form-control" id="url" name="url" placeholder="Input URL" required>
  <button type="submit" class="btn btn-primary mb2">Submit</button>
  {{#if url_invalid}}
  <h2 class="text-danger">Invalid URL!</h2>
  {{/if}}
</form>